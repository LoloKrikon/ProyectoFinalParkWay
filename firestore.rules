rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir leer y escribir en la colección "users" solo si el usuario está autenticado
    // y es dueño del documento (su UID coincide con el ID del documento)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regla por defecto para el resto (opcional: permitir solo lectura o mantener bloqueado)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
